n = int(input("Enter the number"))
d = 0 
rev = 0
n1 = n
if n <= 0:
    print("Invalid input. Please enter a positive number.")
elif n > 0 and n < 10:
    print(n,"is a Palindrome number")
else:
    while n > 0:
        d = n % 10
        rev = rev * 10 + d
        n = n // 10
    if n1 == rev:
         print(n1,"is a Palindrome number")
    else:
        print(n1,"is not a Palindrome number")
