def factorial(n):
    if n < 0:
        print("Invalid input. Please enter a positive number.")
    elif n == 0 or n == 1:
        print("Factorial of",n,"is",1)
    else:
        f = 1
        i = 1
        while i <= n:
            f = f * i
            i += 1
        print("Factorial is:",f)

n = int(input("Enter a number:"))
factorial(n)
