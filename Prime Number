n = int(input("Enter a number:"))
flag = 0 
i = 2
if n <= 0:
    print("Invalid input. Please enter a number greater than zero.")
elif n == 1:
    print("1 is neither prime nor composite")
else:
    while i < n:
        if n % i == 0:
            flag = 1
            break
            i += 1
    if flag == 1:
        print(n,"is not a Prime Number")
    else:
        print(n,"is a Prime number")
